<% get_chatrooms %>
<div>
    <%= link_to "追蹤申請", who_wants_to_follow_me_follower_apply_forms_path, {class: "btn waves-effect waves-light"} %>
    <%= link_to "好友申請", friend_apply_forms_path , {class: "btn waves-effect waves-light"} %>
</div>
<br>
<div>
  群組
  <%= link_to  "新增", new_chatroom_path %>
  <hr>
  <% unless @groups.size > 0 %>
    No Group
  <% else %>
    <%= render  "shared/chatroom", chatrooms: @groups %>
  <% end %>
</div>
<br>
<div>
  好友
  <hr>
  <% unless @friends.size > 0 %>
    No Friends
  <% else %>
    <%= render  "shared/chatroom", chatrooms: @friends %>
  <% end %>
</div>