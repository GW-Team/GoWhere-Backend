<div class="login-background">
    <div class="box">
        <%= image_tag "logo.png" %>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-field">
            <i class="material-icons prefix">account_circle</i>
            <%= f.text_field :email, required: false, autofocus: true,  id: "icon_prefix", class: "validate" %>
          <label for="icon_prefix">帳號</label>
        </div>
        <div class="input-field">
            <i class="material-icons prefix">lock_outline</i>
        <%= f.text_field :password, required: false, autofocus: true,  id: "icon_password", class: "validate", type: :password %>
          <label for="icon_password">密碼</label>
        </div>

            <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
            <%= f.button :submit, "LOGIN NOW" ,{class: "btn waves-effect waves-light"} %>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>