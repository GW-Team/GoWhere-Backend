<div class="chat-box">
  <div class="chat-title">
    <a href="<%= chatroom_notes_path(@chatroom) %>">
      <i class="material-icons white-text">chevron_left</i>
    </a>
    <% if can? :edit, @note %>
      <a class="dropdown-trigger" href="#!" data-target="chat-dropdown">
        <i class="material-icons right">more_vert</i>
      </a>
      <ul id="chat-dropdown" class="dropdown-content">
        <li>
          <%= link_to "編輯", edit_note_path(@note) %>
        </li>
        <li>
          <%= link_to "刪除", note_path(@note), method: :delete, data:{ confirm: "確定刪除？"} %>
        </li>
        <li class="divider"></li>
      </ul>
      <% end %>
  </div>
  <div class="note-main">
    <ul class="chat-list">
      <li>
        <div class="card ">
          <div class="card-content">
            <span class="card-title ">
              <a href="#">
                <%= image_tag user_avatar(@note.user) %>
                  <span>
                    <%= @note.user.display_name %>
                  </span>
              </a>
            </span>
            <div class="divider"></div>
            <p class="card-p">
              <%= simple_format(@note.content) %>
            </p>
          </div>
          <%= render  "comment", note: @note %>
        </div>
      </li>
    </ul>
  </div>
  <%= render  "comment_form", comment: @comment, note: @note %>
</div>