<%= simple_form_for news_feed do |f| %>
  <%= f.input :description, label: "內容", placeholder: "撰寫貼文..." %>
  <div class="row">
    <div class="col"><%= f.input :lng, label: "經度" %></div>
    <div class="col"><%= f.input :lat, label: "緯度" %></div>
  </div>
  <%= f.button :submit, "送出", data: { disable_with: "處理中..." },class: "btn waves-light" %>
<% end %>
