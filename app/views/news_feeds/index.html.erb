<div>
  <%= render 'form', news_feed: @news_feed %>
  <br/>
  <hr/>
  <br/>
  <% @news_feeds.each do |news_feed| %>
    <ul class="collection">
      <li class="collection-item avatar">
        <%= image_tag user_avatar(news_feed.user), class: "circle" %>
        <span class="title"><%= news_feed.user.display_name %></span>
        <p><%= news_feed.created_at.strftime('%Y-%m-%d %H:%M') %></p>

        <% if can? :manage, news_feed %>
          <div class="secondary-content">
            <%= link_use_i_tag("keyboard_arrow_right", edit_news_feed_path(news_feed.id), :get) %>
            <%= link_use_i_tag("delete", news_feed_path(news_feed.id), :delete) %>
          </div>
        <% end %>

      </li>
      <li>
        <div class="row">
          <div class="col s12 m12">
            <div class="card">
              <div class="card-image">
                <img src="https://materializecss.com/images/sample-1.jpg">
              </div>
              <div class="card-content">
                <p><%= news_feed.description %></p>
              </div>
              <div class="card-action">
                <div class="row">
                  <%= "#{like_amount(news_feed.id)}人喜歡" %>
                  <%= "#{comment_amount(news_feed.id)}人留言" %>
                </div>
                <div class="row">
                  <%= like_or_unlike(news_feed.id) %>
                  <%= link_to "comment", news_feed_comments_path(news_feed.id) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>
